#!/bin/bash

# Fix common errors:
# Referencing undefined variables (which default to "")
# Ignoring failing commands
set -o nounset
set -o errexit
set -o pipefail
# Note this breaks passing a variable as args to a command
IFS=$'\n\t'

SUMMERY=${1:-}
DESC=${2:-}

DATA=$(printf '{"fields":{"project":{"key": "%s"},"summary": "%s","description": "%s","issuetype": {"name": "Task"}}}' "$PROJECT_KEY" "$SUMMERY" "$DESC")

curl -D- -u "${JIRA_USER}:${JIRA_PASSWORD}" -X POST --data $DATA -H "Content-Type: application/json" https://${JIRA_HOST}.atlassian.net/rest/api/2/issue/
