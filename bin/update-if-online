#!/bin/bash

# Wait until ssh keys are loaded
#sleep 10

export SSH_AUTH_SOCK=/run/user/1001/keyring/ssh

GIT_REPOSITORIES=(
    "$HOME/Documents/Zim"
    "$HOME/.config/nvim"
    "$HOME/.dotfiles"
)

if nm-online -q; then
    for DIR in "${GIT_REPOSITORIES[@]}"; do
        (
        cd "$DIR" || exit
        echo "updating $DIR"
        git pull -q
        )
    done
fi
